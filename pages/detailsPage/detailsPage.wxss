 .details_big image {
   width: 100%;
   height: 46vw;
 }
 .details_big {
   width: 49%;
   border: 1px solid #ccc;
   box-sizing: border-box;
   margin-bottom: 20rpx;
   padding-bottom: 15rpx;
 }
 .details {
   display: flex;
   flex-wrap: wrap;
   justify-content: space-between;
 }
 .details {
   padding: 20rpx;
   box-sizing: border-box;
 }
 page {
   font-size: 28rpx;
 }
 .details_content {
   font-weight: 500;
   padding: 0 10rpx;
   display: -webkit-box;
   -webkit-box-orient: vertical;
   -webkit-line-clamp: 1;
   overflow: hidden;
 }
 .details_text {
   display: flex;
   justify-content: space-between;
   padding: 0 10rpx;
   box-sizing: border-box;
   color: #999;
   font-size: 26rpx;
 }