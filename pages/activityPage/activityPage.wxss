.activity_img image {
  width: 100%;
  height: 230rpx;
}
.activity_img {
  border: 1px solid #ccc;
  background: #fff;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
}
page {
  font-size: 30rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background: #e9e9e9;
}
.activity_text {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #999;
  font-size: 30rpx;
}
.activity_title {
  padding:0 20rpx;
  box-sizing:border-box;
  font-size:33rpx;
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;
}