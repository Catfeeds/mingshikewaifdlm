.location_img image{
  width: 30rpx;
  height: 30rpx;
}
.location_img text {
  color: #999;
}
.location_img {
  background: #ddd;
  border-radius: 10rpx; 
  width: 20%;
  padding: 5rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  margin-right: 20rpx;
  justify-content: center;
}
.index_location {
  display: flex;
  padding: 0 20rpx;
  box-sizing: border-box;
}
page {
  font-size: 28rpx;
}
.index_input {
  border: 1px solid #ddd;
  border-radius: 60rpx;
  width: 80%;
  color: #999;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.index_input text {
  margin-left: 10rpx;
}
/*轮播图  */
.slide_image {
  width: 100%;
  height: 100%;
}
.swiper {
  margin-top: 20rpx;
  height: 500rpx;
}
/*分类  */
.classify_img {
  width: 100%;
  height: 120rpx;
  display: flex;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
}
.classify_img image {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.classify_big {
  width: 20%;
  margin-right: 30rpx;
  box-sizing: border-box;
}
.classify {
  width: 100%;
  display: flex;
  padding: 20rpx 20rpx 0 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ccc;
}
.classify_text {
  font-size: 21rpx;
  text-align: center;
   line-height: 40rpx; 
}
.classify view:last-child {
  margin-right: 0;
}
/*最新信息  */
.message_img image{
  width: 120rpx;
  height: 150rpx; 
}
.message_img {
   width: 17%; 
   margin-right: 10rpx; 
}
.message_left text {
  border: 1px solid #ff0000;
  padding: 0rpx 10rpx; 
  border-radius: 10rpx;
  color: #ff0000;
  text-align: center;
  font-size:21rpx;
}
 .message_left {
    width: 12%;   
   /* display: block; */
   /* margin-right: 10rpx; */
} 
.new_message {
   display: flex; 
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #ddd;
}
.message_right {
  display: flex; 
  flex-direction:column; 
  justify-content: space-between;
  font-size: 23rpx; 
  width:83%;
}
.message_big {
  display: flex; 
  width:100%;
}
.message_text text {
  display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 1;
	overflow: hidden;  
  /* width:87%; */
}
.message_text {
  width: 87%;
}
/*推荐课程  */
.recommend_border {
  width: 4px;
  /* height: 70rpx; */
  background: red;
  margin-right: 10rpx;
}
.recommend {
  display: flex;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 31rpx;
  font-weight: 600;
}
